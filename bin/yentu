#!/usr/bin/env php
<?php
error_reporting(E_ALL ^ E_NOTICE);
require "vendor/autoload.php";

use yentu\Importer;
use yentu\Migration;

$cli = new ClearIce();
$cli->addCommands('import', 'migrate');
$cli->addOptions(
    array(
        'command' => 'init',
        'short'
    )
);

$options = $cli->parse();

switch($options['__command__'])
{
    case 'import':
        $importer = new Importer();
        $importer->run();
        break;
    
    case 'migrate':
        $migration = new Migration();
        $migration->run();
        break;
}

